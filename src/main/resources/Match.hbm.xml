<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- can't name the table "match" because it's a keyword of sql -->
    <class name = "fr.uge.lootin.back.Match" table = "_Match">
        <meta attribute = "class-description">
            This class contains the details of the matches
        </meta>
        <id name = "id" type = "long" column = "id">
            <generator class="native"/>
        </id>
        <many-to-one name="user1" class="fr.uge.lootin.back.User"/>
        <many-to-one name="user2" class="fr.uge.lootin.back.User"/>

    </class>
</hibernate-mapping>