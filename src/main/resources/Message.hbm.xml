<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "fr.uge.lootin.back.Message" table = "Message">
        <meta attribute = "class-description">
            This class contains all the messages
        </meta>
        <id name = "id" type = "long" column = "id">
            <generator class="native"/>
        </id>
        <many-to-one name="match" column="matchId" class="fr.uge.lootin.back.Match"/>
        <property name = "sendTime" column = "sendTime" type = "timestamp"/>
        <property name = "message" column = "message" type = "java.lang.String"/>
    </class>
</hibernate-mapping>